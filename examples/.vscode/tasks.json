{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "C/C++: clang++ build active file",
      "command": "/bin/clang++",
      "args": [
        "-std=c++17",
        // "-stdlib=libc++",

        // where headers of local leetcode located
        "-I${HOME}/programs/local_leetcode/include",
        // where library of local leetcode located
        "-L${HOME}/.local/lib",
        "-fsanitize=address",
        "-fsanitize=undefined",
        "-fno-omit-frame-pointer",
        "-Wall",
        "-O2",
        "${file}",
        "-o",
        // where output executable binary located
        "${fileDirname}/ExeFiles/${fileBasenameNoExtension}",
        // "-g",
        // "-lc++abi",
        "-llocal_leetcode"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "compiler: /bin/clang++"
    },
    {
      "type": "shell",
      "label": "C/C++: clang++ build active file for debug",
      "command": "/bin/clang++",
      "args": [
        "-std=c++17",
        // "-stdlib=libc++",

        // where headers of local leetcode located
        "-I${HOME}/programs/local_leetcode/include",
        // where library of local leetcode located
        "-fsanitize=address",
        "-fsanitize=undefined",
        "-fno-omit-frame-pointer",
        "-fstandalone-debug",
        "-g",
        // "-O2",
        "${file}",
        "-o",
        // where output executable binary located
        "${fileDirname}/ExeFiles/${fileBasenameNoExtension}",
        // "-lc++abi",
        "-llocal_leetcode"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build",
      "detail": "compiler: /bin/clang++"
    },
  ]
}